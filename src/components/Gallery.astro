---
import MediaElement from "@components/MediaElement.astro";

interface Props {
  media: string[] | undefined;
  caption?: string;
}

const { media, caption } = Astro.props;
---

<section class="gallery">
  {media && media.map((item) => <MediaElement path={item} />)}
  {caption && <p class="caption">{caption}</p>}
</section>

<style>
  .gallery {
    width: 100%;
    height: 100%;
    column-count: 2;
    column-gap: 1rem;
    width: 100%;
    display: block;
    margin-top: 5rem;
  }
</style>
